{
  "command": "ls",
  "description": "List directory contents",
  "global_options": [
    {
      "long": "--help",
      "short": "-?",
      "description": "Display help information"
    },
    {
      "long": "--version",
      "short": "-V",
      "description": "Display version information"
    }
  ],
  "subcommands": [],
  "options": [
    {
      "long": "--all",
      "short": "-a",
      "description": "Do not ignore entries starting with ."
    },
    {
      "long": "--almost-all",
      "short": "-A",
      "description": "Do not list implied . and .."
    },
    {
      "long": "--directory",
      "short": "-d",
      "description": "List directories themselves, not their contents"
    },
    {
      "long": "--classify",
      "short": "-F",
      "description": "Append indicator (one of */=>@|) to entries"
    },
    {
      "long": "--no-group",
      "short": "-G",
      "description": "In a long listing, don't print group names"
    },
    {
      "long": "--human-readable",
      "short": "-h",
      "description": "With -l and/or -s, print sizes like 1K 234M 2G etc."
    },
    {
      "long": "--inode",
      "short": "-i",
      "description": "Print the index number of each file"
    },
    {
      "long": "--long",
      "short": "-l",
      "description": "Use a long listing format"
    },
    {
      "short": "-o",
      "description": "Like -l, but do not list group information"
    },
    {
      "long": "--recursive",
      "short": "-R",
      "description": "List subdirectories recursively"
    },
    {
      "long": "--reverse",
      "short": "-r",
      "description": "Reverse order while sorting"
    },
    {
      "long": "--size",
      "short": "-S",
      "description": "Sort by file size, largest first"
    },
    {
      "long": "--sort",
      "description": "Sort by WORD instead of name: none (-U), size (-S), time (-t), version (-v), extension (-X)"
    },
    {
      "short": "-X",
      "description": "Sort alphabetically by entry extension"
    },
    {
      "long": "--time",
      "short": "-t",
      "description": "Sort by modification time, newest first"
    },
    {
      "long": "--full-time",
      "description": "Like -l --time-style=full-iso"
    },
    {
      "long": "--time-style",
      "description": "Time/date format with -l; see TIME_STYLE in `ls --help`"
    },
    {
      "long": "--color",
      "description": "Colorize the output; WHEN can be 'always' (default if omitted), 'auto', or 'never'"
    }
  ],
  "arguments": [
    {
      "name": "directories",
      "description": "Directories or files to list (default: current directory)"
    }
  ]
}