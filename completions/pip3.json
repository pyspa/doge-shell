{
  "command": "pip3",
  "description": "Python 3 package manager",
  "subcommands": [
    {
      "name": "install",
      "description": "Install packages",
      "options": [
        { "short": "-r", "long": "--requirement", "description": "Install from requirements file" },
        { "short": "-U", "long": "--upgrade", "description": "Upgrade packages" },
        { "short": "-e", "long": "--editable", "description": "Install in editable mode" },
        { "long": "--user", "description": "Install to user site-packages" }
      ]
    },
    {
      "name": "uninstall",
      "description": "Uninstall packages",
      "arguments": [
        {
          "name": "package",
          "description": "Package to uninstall",
          "type": {
            "type": "Script",
            "data": "pip3 list --format=freeze 2>/dev/null | cut -d= -f1"
          }
        }
      ]
    },
    {
      "name": "list",
      "description": "List installed packages",
      "options": [
        { "short": "-o", "long": "--outdated", "description": "List outdated packages" }
      ]
    },
    {
      "name": "show",
      "description": "Show package information",
      "arguments": [
        {
          "name": "package",
          "description": "Package to show",
          "type": {
            "type": "Script",
            "data": "pip3 list --format=freeze 2>/dev/null | cut -d= -f1"
          }
        }
      ]
    },
    { "name": "freeze", "description": "Output installed packages in requirements format" },
    { "name": "check", "description": "Verify installed packages have compatible dependencies" }
  ],
  "global_options": [
    { "short": "-V", "long": "--version", "description": "Show version" },
    { "short": "-v", "long": "--verbose", "description": "Verbose output" },
    { "short": "-q", "long": "--quiet", "description": "Quiet output" }
  ]
}
