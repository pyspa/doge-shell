{
  "command": "rg",
  "description": "A fast, user-friendly alternative to grep.",
  "global_options": [
    {
      "short": "-i",
      "long": "--ignore-case",
      "description": "Ignore case distinctions in PATTERN.",
      "takes_value": false
    },
    {
      "short": "-S",
      "long": "--smart-case",
      "description": "Case insensitive unless PATTERN has uppercase.",
      "takes_value": false
    },
    {
      "short": "-w",
      "long": "--word-regexp",
      "description": "Select only matches that match whole words.",
      "takes_value": false
    },
    {
      "short": "-F",
      "long": "--fixed-strings",
      "description": "Treat PATTERN as fixed strings.",
      "takes_value": false
    },
    {
      "short": "-v",
      "long": "--invert-match",
      "description": "Select non-matching lines.",
      "takes_value": false
    },
    {
      "short": "-c",
      "long": "--count",
      "description": "Suppress normal output; show count of matching lines.",
      "takes_value": false
    },
    {
      "short": "-l",
      "long": "--files-with-matches",
      "description": "Suppress normal output; show file names with matches.",
      "takes_value": false
    },
    {
      "long": "--files-without-match",
      "description": "Suppress normal output; show file names without matches.",
      "takes_value": false
    },
    {
      "short": "-g",
      "long": "--glob",
      "description": "Include or exclude files with GLOB.",
      "takes_value": true,
      "value_type": { "type": "String" }
    },
    {
      "long": "--type",
      "description": "Only search files matching TYPE (e.g., 'rust', 'py'). See 'rg --type-list'.",
      "takes_value": true,
      "value_type": { "type": "Choice", "data": ["rust", "python", "json", "md", "html"] }
    },
    {
      "long": "--type-list",
      "description": "Show all supported file types and their globs.",
      "takes_value": false
    },
    {
      "short": "-A",
      "long": "--after-context",
      "description": "Show NUM lines of context after each match.",
      "takes_value": true,
      "value_type": { "type": "Number" }
    },
    {
      "short": "-B",
      "long": "--before-context",
      "description": "Show NUM lines of context before each match.",
      "takes_value": true,
      "value_type": { "type": "Number" }
    },
    {
      "short": "-C",
      "long": "--context",
      "description": "Show NUM lines of context before and after each match.",
      "takes_value": true,
      "value_type": { "type": "Number" }
    },
    {
      "long": "--context-separator",
      "description": "The string used to separate non-contiguous context lines.",
      "takes_value": true,
      "value_type": { "type": "String" }
    },
    {
      "long": "--json",
      "description": "Output results in JSON format.",
      "takes_value": false
    },
    {
      "short": "-N",
      "long": "--no-line-number",
      "description": "Suppress line numbers.",
      "takes_value": false
    },
    {
      "long": "--one-file-system",
      "description": "Do not cross file system boundaries.",
      "takes_value": false
    },
    {
      "long": "--stats",
      "description": "Show statistics about the search.",
      "takes_value": false
    },
    {
      "short": "-u",
      "long": "--unrestricted",
      "description": "Search hidden files and directories.",
      "takes_value": false
    },
    {
      "long": "--max-columns",
      "description": "The maximum number of columns to read from each file.",
      "takes_value": true,
      "value_type": { "type": "Number" }
    },
    {
      "long": "--color",
      "description": "When to use color in output (always, never, auto).",
      "takes_value": true,
      "value_type": { "type": "Choice", "data": ["always", "never", "auto"] }
    },
    {
      "short": "-r",
      "long": "--replace",
      "description": "Replace matches with STRING.",
      "takes_value": true,
      "value_type": { "type": "String" }
    },
    {
      "long": "--max-filesize",
      "description": "Ignore files larger than SIZE (e.g., '10m' for 10MB).",
      "takes_value": true,
      "value_type": { "type": "String" }
    },
    {
      "short": "-j",
      "long": "--threads",
      "description": "Number of threads to use.",
      "takes_value": true,
      "value_type": { "type": "Number" }
    }
  ],
  "subcommands": [],
  "arguments": [
    {
      "name": "PATTERN",
      "description": "The search pattern (regular expression).",
      "required": true,
      "arg_type": { "type": "Regex" }
    },
    {
      "name": "PATH",
      "description": "Path(s) to search (directories or files).",
      "multiple": true,
      "arg_type": { "type": "Directory" }
    }
  ]
}