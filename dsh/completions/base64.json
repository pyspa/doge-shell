{
  "command": "base64",
  "description": "Base64 encode/decode data and print to standard output",
  "options": [
    {
      "short": "-d",
      "long": "--decode",
      "description": "Decode data"
    },
    {
      "short": "-i",
      "long": "--ignore-garbage",
      "description": "When decoding, ignore non-alphabet characters"
    },
    {
      "short": "-w",
      "long": "--wrap",
      "description": "Wrap encoded lines after COLS character (default 76)"
    },
    {
      "long": "--help",
      "description": "Display this help and exit"
    },
    {
      "long": "--version",
      "description": "Output version information and exit"
    }
  ],
  "arguments": [
    {
      "name": "file",
      "description": "File to encode/decode (default: standard input)"
    }
  ]
}
