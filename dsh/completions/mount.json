{
  "command": "mount",
  "description": "Mount a filesystem",
  "global_options": [
    {
      "short": "-h",
      "long": "--help",
      "description": "Display help"
    },
    {
      "short": "-V",
      "long": "--version",
      "description": "Display version"
    },
    {
      "short": "-a",
      "long": "--all",
      "description": "Mount all filesystems mentioned in fstab"
    },
    {
      "short": "-f",
      "long": "--fake",
      "description": "Dry run; print what would be done"
    },
    {
      "short": "-o",
      "long": "--options",
      "description": "Comma-separated list of mount options"
    },
    {
      "short": "-r",
      "long": "--read-only",
      "description": "Mount the filesystem read-only"
    },
    {
      "short": "-w",
      "long": "--rw",
      "description": "Mount the filesystem read-write (default)"
    },
    {
      "short": "-t",
      "long": "--types",
      "description": "Limit the set of filesystem types",
      "takes_value": true,
      "value_type": {
        "type": "Choice",
        "data": [
          "ext4",
          "ext3",
          "ext2",
          "xfs",
          "btrfs",
          "ntfs",
          "vfat",
          "exfat",
          "iso9660",
          "nfs",
          "cifs",
          "tmpfs",
          "squashfs"
        ]
      }
    },
    {
      "short": "-v",
      "long": "--verbose",
      "description": "Verbose mode"
    }
  ],
  "arguments": [
    {
      "name": "device",
      "description": "Device to mount",
      "type": {
        "type": "Script",
        "data": "lsblk -rno NAME,TYPE 2>/dev/null | awk '$2==\"part\" || $2==\"disk\" {print \"/dev/\" $1}'"
      }
    },
    {
      "name": "mountpoint",
      "description": "Mount point directory",
      "type": {
        "type": "Directory"
      }
    }
  ],
  "subcommands": []
}